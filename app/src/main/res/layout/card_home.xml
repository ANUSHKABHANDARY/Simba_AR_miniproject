<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:layout_margin="10dp"
    android:elevation="25dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:id="@+id/modelImageRecyclerView"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="15dp"
            android:text="Earth"
            android:id="@+id/modelNameRecyclerView"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/viewModelRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                app:cardCornerRadius="10dp"
                android:clickable="true"
                app:cardBackgroundColor="#000000">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:text="View Model"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/favouriteRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#0DB7B7"
                android:layout_marginLeft="10dp">

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/like"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:background="#0DB7B7"
                    app:tint="#ffffff">
                </ImageButton>
                <!--                    <TextView-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:text="Like"-->
                <!--                        android:textStyle="bold"-->
                <!--                        android:textColor="#ffffff"-->
                <!--                        android:layout_marginLeft="25dp"-->
                <!--                        android:layout_marginRight="25dp"-->
                <!--                        android:layout_marginTop="10dp"-->
                <!--                        android:layout_marginBottom="10dp"/>-->
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>